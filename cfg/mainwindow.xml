<interface>
	<window key="win">
		<title>SimpleEdit</title>
		<coords x="0" y="0" width="640" height="480" />
		<flag>QWINDOW_STANDARD</flag>
		<flag>QWINDOW_CENTERED</flag>
		
		<menubar key="menubar">
			<title caption="File">
				<item id="101" caption="New" shortcut="Ctrl+N" />
				<item id="102" caption="Open" shortcut="Ctrl+O" />
				<item id="103" caption="Save" shortcut="Ctrl+S" />
				<item id="104" caption="Save As..." shortcut="Shift+Ctrl+S" />
				<item id="105" caption="Save All" />
				<separator/>
				<item id="106" caption="Close" shortcut="Ctrl+W" />
				<item id="107" caption="Close All" />
				<separator/>
				<item id="108" caption="Next File" shortcut="Meta+Tab" />
				<item id="109" caption="Previous File" shortcut="Shift+Meta+Tab" />
				<separator />
				<item id="110" caption="Exit" />
			</title>
			<title caption="Edit">
				<item id="201" caption="Undo" shortcut="Ctrl+Z" />
				<item id="202" caption="Redo" shortcut="Ctrl+Y" />
				<separator />
				<item id="203" caption="Cut" shortcut="Ctrl+X" />
				<item id="204" caption="Copy" shortcut="Ctrl+C" />
				<item id="205" caption="Paste" shortcut="Ctrl+V" />
				<separator />
				<item id="206" caption="Find && Replace..." shortcut="Ctrl+F" />
				<item id="207" caption="Find Next" shortcut="Shift+Ctrl+F" />
			</title>
			<title caption="Program">
				<item id="301" caption="Run" shortcut="Ctrl+R" />
				<item id="303" caption="Build" shortcut="Ctrl+B" />
				<item id="304" caption="Compile" shortcut="Shift+Ctrl+B" />
				<separator />
				<item id="305" caption="Lock Build File" />
			</title>
			<title caption="Help">
				<item id="401" caption="About..." />
			</title>
		</menubar>
		
		<toolbar key="toolbar">
			<imagepath>cfg/toolbar/</imagepath>
			<item id="101" image="new.png" tooltip="New"/>
			<item id="102" image="open.png" tooltip="Open"/>
			<item id="103" image="save.png" tooltip="Save"/>
			<item id="106" image="close.png" tooltip="Close"/>
			<separator />
			<item id="201" image="undo.png" tooltip="Undo"/>
			<item id="202" image="redo.png" tooltip="Redo"/>
			<separator />
			<item id="203" image="cut.png" tooltip="Cut"/>
			<item id="204" image="copy.png" tooltip="Copy"/>
			<item id="205" image="paste.png" tooltip="Paste"/>
			<separator />
			<item id="206" image="find.png" tooltip="Find"/>
			<separator />
			<item id="301" image="run.png" tooltip="Run"/>
			<item id="303" image="build.png" tooltip="Build"/>
			<item id="304" image="compile.png" tooltip="Compile"/>
		</toolbar>
		
		<tabbar key="tabbar"/>
		
		<statusbar key="statusbar"/>
	</window>
</interface>
